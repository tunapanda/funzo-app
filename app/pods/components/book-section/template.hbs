  <div class="book-loading-overlay">
    <svg class="spinner" width="65px" height="65px" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
       <circle class="path" fill="none" stroke-width="6" stroke-linecap="round" cx="33" cy="33" r="30"></circle>
    </svg>
  </div>
  
  <div class="book-container">
    <div class="book-navigation book-navigation-left"{{action 'navPrev'}}></div>
    <div class="book-navigation book-navigation-right"{{action 'navNext'}}></div>
    <div class="book-content" style={{bookContentStyle}}>
      {{!-- {{pagesHTML}} --}}
      {{#each pages as |page|}}
        <div class="page" style={{pageStyle}}>
          <div class="page-content">
            {{page}}
          </div>
        </div>
        {{else}}
        <div class="page" style={{pageStyle}}>
          <div class="page-content">
          </div>
        </div>
      {{/each}}
    </div>
    <div class="paginator" style={{paginatorStyle}}>
      {{html}}
    </div>
  </div>