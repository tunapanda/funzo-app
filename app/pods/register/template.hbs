<div class="container">
  <div class="row">
    <form class="col-md-12"  {{action 'register' on='submit'}}>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group {{if errors.model.firstName.length 'has-error'}}">
            <label class="control-label" for="first_name">First Name</label>
            {{input id="first_name" type="text" value=model.firstName class="form-control"}}
            <span class="help-block">
            {{#each errors.model.firstName as |error|}}
              {{error}}
            {{/each}}
            </span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group {{if errors.model.lastName.length 'has-error'}}">
          <label class="control-label" for="last_name" data-error="{{errors.model.lastName.[0]}}">Last Name</label>
            {{input id="last_name" type="text" value=model.lastName class="form-control"}}
            <span class="help-block">
            {{#each errors.model.lastName as |error|}}
              {{error}}
            {{/each}}
            </span>
          </div>
        </div>
      </div>
      <div class="form-group {{if errors.model.lastName.length 'has-error'}}">
        <label class="control-label" for="pin">PIN</label>
        {{pin-input pin=(mut model.pin) id="pin"}}
        <span class="help-block">
        {{#each errors.model.pin as |error|}}
          {{error}}
        {{/each}}
        </span>
      </div>
      <div class="form-group">

          {{input type="submit" class="btn btn-primary btn-raised btn-lg" value="Submit"}}
      </div>
    </form>
  </div>
</div>